@model List<BackofficeSOSA.Models.Empregado>

@{
    ViewBag.Title = "Empregados";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/Admin/Dashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Empregados</li>

    </ol>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <i class="fas fa-table"></i>
            Empregados
            <a href="/Admin/AddEmpregado" class="btn btn-info fa-pull-right">Adicionar empregado</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>DataNascimento</th>
                            <th>NrTelemóvel</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>DataNascimento</th>
                            <th>NrTelemóvel</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataNascimento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NrTelemovel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "EditEmpregado", new { id = item.Id }) |
                                    @Html.ActionLink("Detalhes", "DetailsEmpregado", new { id = item.Id }) |
                                    @Html.ActionLink("Remover", "DeleteEmpregado", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/plug-ins/1.10.21/sorting/date-euro.js"></script>

    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable({

                "columnDefs": [
                    { "type": "date-euro", targets: 4 }
                ],
                "order": [[0, "asc"]]

            });
        });
    </script>>
}