@model BackofficeSOSA.Models.Animal

@{
    ViewBag.Title = "DetailsAnimal";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="form-horizontal" style="font-size:22px">

        <div class="col-md-offset-2 col-md-10">
            <h2>Detalhes Animal</h2>
        </div>
        <hr />
        <dl class="dl-horizontal col-md-offset-2 col-md-10">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Especie)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Especie)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Idade)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Idade)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Peso)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Peso)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.HistoricoClinico)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HistoricoClinico)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Raca)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Raca)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Status)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt>
                Imagens:
            </dt>
            @foreach (var item in ViewData["imagensAni"] as IList<String>)
            {
                <img src="@item" style="width: 10%; height: auto;" />
            }

        </dl>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Admin/EditAnimal/@Model.Id" class="btn btn-info">Editar animal</a>
                <a href="/Admin/AddImagemAnimal/@Model.Id" class="btn btn-info">Adicionar imagens</a>
                <a onclick="window.history.back()" class="btn btn-warning text-white">Voltar</a>
            </div>
        </div>
    </div>
